@using BirthCal.ViewModels
@model LoginViewModel
@{
    ViewData["Title"] = "Příhlášení";
}
    <h1 style="text-align:center; color:dodgerblue; margin-bottom:50px; margin-top:100px"><b>Přihlášení</b></h1>

    <div class="container col-8" asp-validation-summary="All"></div>
        <form asp-action="Login" method="post" class="container col-8">
            <input type="hidden" asp-for="ReturnUrl" />

            <div class="form-group" style="color:dodgerblue;margin-bottom: 20px">
                <label asp-for="Username" style="color:dodgerblue"><b>Přihlášovací jméno</b></label>
                <input asp-for="Username" class="form-control"/>
            </div>

            <div class="form-group" style="color:dodgerblue;margin-bottom: 20px">
                <label asp-for="Password" style="color:dodgerblue"><b>Heslo</b></label>
                    @* <input asp-for="Password" class="form-control" /> *@
                <input type="password" asp-for="Password" class="form-control"/>
                 <div style="padding-top:10px">
                    Zapamatovat?
                    <input type="checkbox" asp-for="Remember" />
                 </div>
                 @* <input type="checkbox" asp-for="Remember"/> *@
            </div>
            @* <button class="btn btn-primary" type="submit">Log In</button> *@

            <div class="container" style="padding:50px;">
                <div class="row justify-content-center">
                    <div class="col-auto">
                        <button class="btn btn-primary" type="submit">Přihlášení</button>
                    </div>
                </div>
            </div>

        </form>
    </div>

    <div class="container col-6" style="padding:50px; border:solid; border-radius:15px;border-width:1px;background-color:whitesmoke;border-color:slategray">

                <p style="color:slategray"><i>Do výše uvedeného formuláře uveďte správné přihlašovací údaje.</i></p>
                <p style="color:slategray"><i>Ve formě přihlašovacího jména a hesla.</i></p>

                <p style="color:slategray" >
                    <i>Instrukce na příhlášení naleznete zde: <a asp-area="" asp-controller="Home" asp-action="Privacy"><i style="color:blue"><u><b>Instrukce</b></i></u></a></i>
                                
                </p>

    </div>

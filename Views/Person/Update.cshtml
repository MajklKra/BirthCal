@using BirthCal.DTO
@model PersonDTO


<h1 style="text-align:center;margin-bottom:100px; margin-top:100px; color:dodgerblue; font-family:sans-serif"><b><u>Uprav záznam</u></b></h1>


<div class="container col-8">
    <form asp-action="Update">
        <div class="form-group">
            
            <label asp-for="@Model.FirstName" style="margin-top:10px"><b style="color:dodgerblue">Jméno</b></label>
            <input type="text" asp-for="@Model.FirstName" class="form-control"/>

            <label asp-for="LastName" style="margin-top:10px"><b style="color:dodgerblue">Příjmení</b></label>
            <input type="text" asp-for="LastName" class="form-control" />

            <label asp-for="DateOfBirth" style="margin-top:10px"><b style="color:dodgerblue">Datum narození</b></label>
            <input type="date" asp-for="DateOfBirth" class="form-control" />
        </div>
       @*  <input type="submit" class="btn btn-success" value="Update"/> *@

        <div class="container" style="padding:50px;">
            <div class="row justify-content-center">
                <div class="col-auto">
                    <input type="submit" class="btn btn-outline-success" value="Uprav" />
                </div>
            </div>
        </div>


    </form>
</div>
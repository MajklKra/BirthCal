@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "Uživatelé";
}

<h1 style="text-align:center; margin:100px;color:slategray;text-shadow 1px 1px 1px slategray">Všichni uživatelé</h1>

<table class="table table-sm table-hover">
    <tr>
        <th>ID</th>
        <th>Jméno</th>
        <th>Email</th>
        <th>Uprav</th>
        <th>Vymaž</th>
    </tr>
    @*rozdělení vlastností uživatele do jednotlivých buněk tabulky - držíme se schématu z table headeru - id, name, email, tlačítka pro update a delete*@
    @foreach (AppUser user in Model) {
        <tr>
            <td>@user.Id</td> @*<td> = table data*@
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>
                <a class="btn btn-sm btn-outline-primary" asp-action="Update" asp-route-id="@user.Id" style="width: 70px; height:35px"> Uprav</a>
            </td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <button type="submit" class="btn btn-outline-danger" style="width: 70px; height:35px">
                        Vymaž
                    </button>
                </form>
            </td>
        </tr>
    }
</table>

     
    <div class="container" style="padding:50px;">
        <div class="row justify-content-center">
            <div class="col-auto">
                <a asp-action="Create" class="btn btn-outline-secondary">Vytvoř</a>
            </div>
        </div>
    </div>
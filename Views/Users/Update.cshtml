@model AppUser
@{
    ViewData["Title"] = "UPDATE USER";
}
@* <h1>Update User</h1> *@


<h1 style="text-align:center;margin-bottom:100px; margin-top:100px; color:dodgerblue; font-family:sans-serif"><b><u>Uprav záznam</u></b></h1>


@* <a asp-action="Index" class="btn btn-secondary">Back</a> *@
<div class="container col-8">
    <div asp-validation-summary="All" class="text-danger"></div>
    <form asp-action="Update" method="post">
    @*     <div class="form-group">
            <label asp-for="Id"></label>
            <input asp-for="Id" class="form-control" disabled />
        </div> *@
        <div class="form-group">
            <label asp-for="UserName" style="margin-top:10px"><b style="color:dodgerblue">Jméno</b></label>
            <input asp-for="UserName" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="Email" style="margin-top:10px"><b style="color:dodgerblue">Email</b></label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="form-group">
            <label for="password" style="margin-top:10px"><b style="color:dodgerblue">Heslo</b></label>
            <input name="password" class="form-control" />
        </div>
        @* <button type="submit" class="btn btn-primary">Save</button> *@

        <div class="container" style="padding:50px;">
            <div class="row justify-content-center">
                <div class="col-auto">
                    <button type="submit" class="btn btn-outline-primary" style="width:70px">Save</button>
                    <a asp-action="Index" class="btn btn-outline-secondary" style="width:70px">Zpátky</a>
                </div>
            </div>
        </div>


    </form>
    
</div>
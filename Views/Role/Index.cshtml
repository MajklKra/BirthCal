@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Oprávnění";
}

@* <h1 class="bg-info text-white">All Roles</h1> *@

<h1 style="text-align:center; margin:100px;color:slategray;text-shadow 1px 1px 1px slategray">Všechny oprávnění</h1>


    @* <a asp-action="Create" class="btn btn-secondary">Create a Role</a> *@
    
    <table class="table table-sm table-hover">
        <tr>
            <th>Role</th>
            <th>Uprav</th>
            <th>Vymaž</th>
            <th>ID</th>
        </tr>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td><a class="btn btn-sm btn-outline-primary" asp-action="Update" asp-route-id="@role.Id">Uprav</a></td>
                <td>
                    <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-outline-danger">
                            Vymaž
                        </button>
                    </form>
                </td>
                <td>@role.Id</td>
            </tr>
        }
    </table>

    <div class="container" style="padding:50px;">
        <div class="row justify-content-center">
            <div class="col-auto">
                <a asp-action="Create" class="btn btn-outline-secondary">Vytvoř</a>
            </div>
        </div>
    </div>
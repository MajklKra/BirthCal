@model RoleEdit
@{
    ViewData["Title"] = "Úprava oprávnění";
}
@* <h1 class="bg-info text-white">Edit Role</h1> *@


<h1 style="text-align:center;margin-bottom:100px; margin-top:100px; color:dodgerblue; font-family:sans-serif"><b><u>Uprav záznam</u></b></h1>

@* <a asp-action="Index" class="btn btn-secondary">Back</a> *@
<div asp-validation-summary="All" class="text-danger"></div>
<form method="post">
    <input type="hidden" name="roleName" value="@Model.Role.Name" />
    <input type="hidden" name="roleId" value="@Model.Role.Id" />
    <h2 class="bg-info p-1 text-white">Přidej do @Model.Role.Name</h2>
    <table class="table table-bordered table-sm">
            @if (Model.RoleNonMembers.Count() == 0) 
            {
                <tr><td colspan="2">Všichni jsou členové</td></tr>
            }
            else {
                @foreach (AppUser user in Model.RoleNonMembers) 
                {
                    <tr>
                    <td>@user.UserName</td>
                    <td>
                    <input type="checkbox" name="AddIds" value="@user.Id">
                    </td>
                    </tr>
                }
            }
    </table>
    <h2 class="bg-info p-1 text-white">Odeber z @Model.Role.Name</h2>
    <table class="table table-bordered table-sm">
                @if (Model.RoleMembers.Count() == 0) {
                    <tr><td colspan="2">Nikdo není člen</td></tr>
                }
                else 
                {
                    @foreach (AppUser user in Model.RoleMembers) 
                    {
                        <tr>
                        <td>@user.UserName</td>
                        <td>
                        <input type="checkbox" name="DeleteIds" value="@user.Id">
                        </td>
                        </tr>
                    }
                }
    </table>
    @* <button type="submit" class="btn btn-primary">Save</button> *@

    <div class="container" style="padding:50px;">
        <div class="row justify-content-center">
            <div class="col-auto">
                <button type="submit" class="btn btn-outline-primary" style="width:70px">Ulož</button>
                <a asp-action="Index" class="btn btn-outline-secondary" style="width:70">Zpátky</a>
            </div>
        </div>
    </div>


</form>
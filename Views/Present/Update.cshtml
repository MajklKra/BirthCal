@using BirthCal.DTO
@model PresentDTO



<h1 style="text-align:center;margin-bottom:100px; margin-top:100px; color:dodgerblue; font-family:sans-serif"><b><u>Uprav záznam</u></b></h1>

<div class="container col-8">
    <form asp-action="Update">
        <div class="form-group">
            <label asp-for="@Model.Description" style="margin-top:10px"><b style="color:dodgerblue">Popis</b></label>
            <input type="text" asp-for="@Model.Description" class="form-control"/>

            <label asp-for="Price" style="margin-top:10px"><b style="color:dodgerblue">Cena</b></label>
            <input type="number" asp-for="Price" class="form-control" />

            <label asp-for="URL" style="margin-top:10px"><b style="color:dodgerblue">URL</b></label>
            <input type="url" asp-for="URL" class="form-control" />

            <label asp-for="Note" style="margin-top:10px"><b style="color:dodgerblue">Poznámka</b></label>
            <input type="text" asp-for="Note" class="form-control" />

            <label asp-for="Purchase" style="margin-top:10px"><b style="color:dodgerblue">Datum</b></label>
            <input type="date" asp-for="Purchase" class="form-control" />
        </div>

        @* <input type="submit" class="btn btn-success" value="Update"/> *@

        <div class="container" style="padding:50px;">
            <div class="row justify-content-center">
                <div class="col-auto">
                    <input type="submit" class="btn btn-outline-success" value="Uprav" />
                </div>
            </div>
        </div>
    </form>
</div>